<% layout('layouts/boilerplate') %>

    <style>
        .filters {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .filter {
            margin-right: 40px;
            text-align: center;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-toggle {
            border: 1px solid #ddd;
            border-radius: 15px;
            height: 2.5rem;
            width: 17rem;
            padding: 0.35rem 1rem;
            margin-left: auto;
            background: #f8f9fa;
            display: flex;
            align-items: center;
        }

        .tax-info {
            display: none;
            color: #198754;
            font-weight: 500;
            font-size: 12px;
        }
    </style>

    <div class="filters" aria-label="Listing filters">
        <div class="tax-toggle" aria-label="Toggle GST info">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckGST" aria-checked="false">
                <label class="form-check-label" for="switchCheckGST">Show GST info</label>
            </div>
        </div>
    </div>

    <section class="py-4">
        <div>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-6 g-4">
                <% allListings.forEach(listing=> { %>
                    <div class="col">
                        <a href="/listings/<%= listing._id %>" class="text-decoration-none w-100"
                            aria-label="View <%= listing.title %>">
                            <div class="card border-0 position-relative card-rounded h-100">
                                <img src="<%= listing.image.url %>" class="card-img-top"
                                    alt="<%= listing.title %> image" loading="lazy"
                                    onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60';">
                                <% if (listing.isGuestFavourite) { %>
                                    <span class="badge-custom">Guest favourite</span>
                                    <% } %>
                                        <i class="fa-regular fa-heart heart-icon" aria-label="Add to wishlist"></i>
                                        <div class="card-body px-2 py-1">
                                            <h6 class="card-title mb-1 fw-semibold" style="font-size: 14px;">
                                                <%= listing.title %>
                                            </h6>
                                            <p class="card-text mb-0" style="font-size: 13px;">
                                                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A"
                                                    %>/ nights
                                                    <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                                            </p>
                                        </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>

    <script>
        // GST info toggle
        document.getElementById('switchCheckGST').addEventListener('change', function () {
            const taxInfos = document.querySelectorAll('.tax-info');
            taxInfos.forEach(info => {
                info.style.display = this.checked ? 'inline' : 'none';
            });
        });

        // Better image error handling
        document.addEventListener('DOMContentLoaded', function () {
            const images = document.querySelectorAll('.card-img-top');
            const fallbackImage = 'https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60';
            images.forEach(img => {
                img.addEventListener('error', function () {
                    this.src = fallbackImage;
                    this.alt = 'Image not available';
                });
                img.addEventListener('load', function () {
                    this.style.opacity = '1';
                });
                img.style.opacity = '0.7';
                img.style.transition = 'opacity 0.3s ease';
            });
        });
    </script>