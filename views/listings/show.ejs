<% layout('layouts/boilerplate') %>
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-10">
      <div class="card show-listing-card">
        <h2 class="card-title mb-4 mt-3 show-listing-title text-center">
          <%= listing.title %>
        </h2>
        <img src="<%= listing.image.url %>" class="show-listing-img mx-auto" alt="<%= listing.title %> image"
          loading="lazy"
          onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60'; this.alt='Image not available';"
          style="max-height:350px; object-fit:cover; border-radius:1rem;">
        <div class="card-body p-5">
          <p class="card-text mb-4 show-listing-desc">
            <span class="show-listing-label">About:</span>
            <%= listing.description %>
          </p>
          <ul class="list-unstyled mb-5 show-listing-details">
            <li class="mb-2"><span class="show-listing-label">Owner:</span>
              <%= listing.owner.username %>
            </li>
            <li class="mb-2"><span class="show-listing-label">Price:</span> &#8377; <%= listing.price ?
                listing.price.toLocaleString('en-IN') : "N/A" %> / Night</li>
            <li class="mb-2"><span class="show-listing-label">Location:</span>
              <%= listing.location %>
            </li>
            <li><span class="show-listing-label">Country:</span>
              <%= listing.country %>
            </li>
          </ul>

          <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
            <div class="d-flex justify-content-between mt-4 mb-4">
              <a href="/listings/<%= listing._id %>/edit"
                class="btn btn-outline-primary btn-lg fw-bold show-listing-btn px-4">Edit</a>
              <form method="post" action="/listings/<%= listing._id %>?_method=DELETE"
                onsubmit="return confirm('Are you sure you want to delete this listing?');">
                <button type="submit"
                  class="btn btn-outline-danger btn-lg fw-bold show-listing-btn px-4">Delete</button>
              </form>
            </div>
            <% } %>

              <% if(currentUser) { %>
                <hr>
                <div class="review-form-wide">
                  <div class="review-form-container p-4 rounded-3 shadow-sm bg-light mt-4">
                    <h4 class="mb-3 text-primary">Leave a Review</h4>
                    <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate
                      class="needs-validation">
                      <div class="mb-3">
                        <label for="rating" class="form-label fw-bold">Rating</label>
                        <fieldset class="starability-growRotate">
                          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." />
                          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                          <label for="first-rate1" title="Terrible">1 star</label>
                          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                          <label for="first-rate2" title="Not good">2 stars</label>
                          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                          <label for="first-rate3" title="Average">3 stars</label>
                          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                          <label for="first-rate4" title="Very good">4 stars</label>
                          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                          <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                      </div>
                      <div class="mb-3">
                        <label for="comment" class="form-label fw-bold">Comment</label>
                        <textarea id="comment" name="review[comment]" cols="30" rows="3" class="form-control"
                          required></textarea>
                        <div class="invalid-feedback">
                          Please add some comments for review
                        </div>
                      </div>
                      <div class="text-center">
                        <button class="btn btn-success px-4">Submit</button>
                      </div>
                    </form>
                  </div>
                </div>
                <% } %>

                  <% if (listing.reviews && listing.reviews.length> 0) { %>
                    <hr>
                    <h4 class="mb-3 text-primary">All Reviews</h4>
                    <div class="row g-3">
                      <% for (review of listing.reviews) { %>
                        <div class="col-md-6">
                          <div class="d-flex align-items-center flex-md-row p-3"
                            style="border-radius: 0.5rem; box-shadow: 0 1px 4px #0001;">
                            <div>
                              <h5 class="text-muted">
                                <%= review.author.username %>
                              </h5>
                              <p class="starability-result" data-rating="<%= review.rating %>"></p>
                              <p class="text-muted card-text">
                                <%= review.comment %>
                              </p>
                            </div>
                            <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                              <div class="ms-auto">
                                <form class="ms-auto" method="post"
                                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                  onsubmit="return confirm('Are you sure you want to delete this review?');">
                                  <button class="btn btn-sm btn-dark ms-auto">Delete</button>
                                </form>
                              </div>
                              <% } %>
                          </div>
                        </div>
                        <% } %>
                    </div>
                    <% } %>
        </div>
      </div>
    </div>
    <div class="col-lg-10 col-md-10 mt-4 text-center">
      <h3>Where you'll be</h3>
      <div id="map" class="mx-auto" style="height:350px; border-radius:1rem; background:#f8f9fa;"></div>
    </div>
  </div>

  <script src="/js/map.js"></script>
  <script>
    // Smooth image loading
    document.addEventListener('DOMContentLoaded', function () {
      const img = document.querySelector('.show-listing-img');
      if (img) {
        img.style.opacity = '0.7';
        img.style.transition = 'opacity 0.3s ease';
        img.addEventListener('load', function () {
          this.style.opacity = '1';
        });
      }
    });
  </script>